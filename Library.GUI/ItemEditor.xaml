<Window x:Class="Library.GUI.ItemEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.GUI"
        mc:Ignorable="d"
        Title="ItemEditor" Height="189" Width="395">
    <Grid>
        <Label Content="Név:" HorizontalAlignment="Left" Margin="10,14,0,0" VerticalAlignment="Top"/>
        <Label Content="Irsz:" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top"/>
        <Label Content="Cím" HorizontalAlignment="Left" Margin="10,71,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txbNev" HorizontalAlignment="Left" Margin="49,18,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="293"/>
        <ComboBox x:Name="cmbZip" HorizontalAlignment="Left" Margin="49,42,0,0" VerticalAlignment="Top" Width="135"/>
        <TextBox x:Name="txbCim" HorizontalAlignment="Left" Margin="49,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="293"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="10,102,0,0" VerticalAlignment="Top" Height="30" Width="100" Click="SaveItem"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="242,102,0,0" VerticalAlignment="Top" Height="30" Width="100" Click="CancelItem"/>

    </Grid>
</Window>
